{
  "compilerOptions": {
    "lib": ["es2021"], // ES2020 in earlier versions
    "module": "ES2022", //ESNext
    "moduleResolution": "Node",
    "target": "ES2022", // ES2020 in earlier versions
    "esModuleInterop": true,
    "rootDirs": ["src"],
    "outDir": "dist",
    "types": ["node"]
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
